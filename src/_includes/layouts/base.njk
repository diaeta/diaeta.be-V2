<!DOCTYPE html>
<html lang="{{ lang or page.lang or localization.defaultLocale }}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>
      {% if title %}{{ title }}{% elseif seo and seo.title %}{{ seo.title }}{% else %}{{ site.brand.name }}{% endif %}
    </title>
    {% if description or seo and seo.description %}
      <meta name="description" content="{{ description or seo.description }}">
    {% endif %}

    {% set canonicalUrl = (page.url or '/') | url %}
    <link rel="canonical" href="{{ site.baseUrl }}{{ canonicalUrl }}">

    {% if localization and localization.supportedLocales and page.url %}
      {% for href in page.url | hreflangAlternates %}
        <link rel="alternate" hreflang="{{ href.locale }}" href="{{ href.url }}">
      {% endfor %}
    {% endif %}

    {% if og_image %}
      <meta property="og:image" content="{{ og_image }}">
    {% endif %}
    <meta property="og:title" content="{{ title or seo.title or site.brand.name }}">
    {% if description or seo and seo.description %}
      <meta property="og:description" content="{{ description or seo.description }}">
    {% endif %}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ site.baseUrl }}{{ canonicalUrl }}">

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Playfair+Display:wght@500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" />

    <!-- Site CSS -->
    <link rel="stylesheet" href="/assets/css/main.css?v={{ cacheBuster }}">

    {% if head_extra %}{{ head_extra | safe }}{% endif %}
  </head>
  <body>
    <div class="site-background" aria-hidden="true"></div>
    <a class="skip-link" href="#main-content">Skip to content</a>
    {% include "partials/header.njk" %}
    
    <!-- Mobile Menu: new layout (mnav) -->
    <nav class="mnav mnav--light js-mnav" aria-hidden="true" aria-label="Mobile navigation" role="dialog" aria-modal="true">
      <div class="mnav__panel" role="document">
        <header class="mnav__header">
          <button class="mnav__close js-mnav-close" aria-label="Close menu"><i class="fa-solid fa-xmark" aria-hidden="true"></i></button>
        </header>
        <div class="mnav__scroll" role="region" aria-label="Menu">
          {% set loc = (lang or page.lang or localization.defaultLocale) %}
          {% set cur = (page.url or '/') | replace('/content', '') %}
          {% set homePath = '/' ~ loc ~ '/' %}
          <ul class="mnav__list">
            <li><a href="/{{ loc }}/" class="mnav__link{% if cur == homePath %} is-active{% endif %}"{% if cur == homePath %} aria-current="page"{% endif %}>Home</a></li>
            <li class="mnav__group js-mnav-group{% if '/'+loc+'/diaeta-method/' in cur or '/'+loc+'/our-expertise/' in cur %} is-open{% endif %}">
              <button class="mnav__toggle js-mnav-toggle" aria-expanded="{% if '/'+loc+'/diaeta-method/' in cur or '/'+loc+'/our-expertise/' in cur %}true{% else %}false{% endif %}">About<i class="mnav__chev fa-solid fa-chevron-down" aria-hidden="true"></i></button>
              <ul class="mnav__submenu">
                <li><a href="/{{ loc }}/diaeta-method/" class="mnav__sublink{% if '/'+loc+'/diaeta-method/' in cur %} is-active{% endif %}"{% if '/'+loc+'/diaeta-method/' in cur %} aria-current="page"{% endif %}>The Diaeta Method</a></li>
                <li><a href="/{{ loc }}/our-expertise/" class="mnav__sublink{% if '/'+loc+'/our-expertise/' in cur %} is-active{% endif %}"{% if '/'+loc+'/our-expertise/' in cur %} aria-current="page"{% endif %}>Our Expertise</a></li>
              </ul>
            </li>
            <li class="mnav__group js-mnav-group{% if '/'+loc+'/weight-loss/' in cur or '/'+loc+'/irritable-bowel-syndrome-fodmap/' in cur or '/'+loc+'/diabetes-management/' in cur or '/'+loc+'/hypertension-cholesterol/' in cur or '/'+loc+'/nutrigenetic-tests/' in cur %} is-open{% endif %}">
              <button class="mnav__toggle js-mnav-toggle" aria-expanded="{% if '/'+loc+'/weight-loss/' in cur or '/'+loc+'/irritable-bowel-syndrome-fodmap/' in cur or '/'+loc+'/diabetes-management/' in cur or '/'+loc+'/hypertension-cholesterol/' in cur or '/'+loc+'/nutrigenetic-tests/' in cur %}true{% else %}false{% endif %}">Services<i class="mnav__chev fa-solid fa-chevron-down" aria-hidden="true"></i></button>
              <ul class="mnav__submenu">
                <li><a href="/{{ loc }}/weight-loss/" class="mnav__sublink{% if '/'+loc+'/weight-loss/' in cur %} is-active{% endif %}"{% if '/'+loc+'/weight-loss/' in cur %} aria-current="page"{% endif %}>Weight Loss</a></li>
                <li><a href="/{{ loc }}/irritable-bowel-syndrome-fodmap/" class="mnav__sublink{% if '/'+loc+'/irritable-bowel-syndrome-fodmap/' in cur %} is-active{% endif %}"{% if '/'+loc+'/irritable-bowel-syndrome-fodmap/' in cur %} aria-current="page"{% endif %}>Irritable Bowel Syndrome</a></li>
                <li><a href="/{{ loc }}/diabetes-management/" class="mnav__sublink{% if '/'+loc+'/diabetes-management/' in cur %} is-active{% endif %}"{% if '/'+loc+'/diabetes-management/' in cur %} aria-current="page"{% endif %}>Diabetes Management</a></li>
                <li><a href="/{{ loc }}/hypertension-cholesterol/" class="mnav__sublink{% if '/'+loc+'/hypertension-cholesterol/' in cur %} is-active{% endif %}"{% if '/'+loc+'/hypertension-cholesterol/' in cur %} aria-current="page"{% endif %}>Hypertension & Cholesterol</a></li>
                <li><a href="/{{ loc }}/nutrigenetic-tests/" class="mnav__sublink{% if '/'+loc+'/nutrigenetic-tests/' in cur %} is-active{% endif %}"{% if '/'+loc+'/nutrigenetic-tests/' in cur %} aria-current="page"{% endif %}>Nutrigenetic Tests</a></li>
              </ul>
            </li>
            <li><a href="/{{ loc }}/locations/" class="mnav__link{% if '/'+loc+'/locations/' in cur %} is-active{% endif %}"{% if '/'+loc+'/locations/' in cur %} aria-current="page"{% endif %}>Locations</a></li>
            <li><a href="/{{ loc }}/tariffs/" class="mnav__link{% if '/'+loc+'/tariffs/' in cur %} is-active{% endif %}"{% if '/'+loc+'/tariffs/' in cur %} aria-current="page"{% endif %}>Pricing</a></li>
            <li><a href="/{{ loc }}/news/" class="mnav__link{% if '/'+loc+'/news/' in cur %} is-active{% endif %}"{% if '/'+loc+'/news/' in cur %} aria-current="page"{% endif %}>Blog</a></li>
            <li><a href="/{{ loc }}/contact/" class="mnav__link{% if '/'+loc+'/contact/' in cur %} is-active{% endif %}"{% if '/'+loc+'/contact/' in cur %} aria-current="page"{% endif %}>Contact</a></li>
          </ul>
        </div>
        <footer class="mnav__footer">
          <a href="tel:+32479355551" class="mnav__phone"><i class="fa-solid fa-phone" aria-hidden="true"></i><span>+32 479 35 55 51</span></a>
          <div class="mnav__lang">
            <button class="mnav__langbtn js-mobile-lang-toggle" aria-expanded="false"><i class="fa-solid fa-globe" aria-hidden="true"></i><span>EN</span><i class="fa-solid fa-chevron-down" aria-hidden="true"></i></button>
            <div class="mnav__langdrop js-mobile-lang-dropdown">
              <a href="/fr/" class="mnav__langopt">FR</a>
              <a href="/en/" class="mnav__langopt active" aria-current="true">EN</a>
              <a href="/nl/" class="mnav__langopt">NL</a>
              <a href="/de/" class="mnav__langopt">DE</a>
              <a href="/ar/" class="mnav__langopt">AR</a>
            </div>
          </div>
          <a href="/en/appointment/" class="mnav__cta">Book Appointment</a>
        </footer>
      </div>
    </nav>
    
    <main id="main-content" tabindex="-1">
      {{ content | safe }}
    </main>
    {% include "partials/footer.njk" %}
    <script src="/assets/js/nav.js?v={{ cacheBuster }}" defer></script>
    <script src="/assets/js/ui.js?v={{ cacheBuster }}" defer></script>
    <!-- Particles.js for hero animation -->
    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script src="/assets/js/hero.js?v={{ cacheBuster }}" defer></script>
  </body>
</html>
